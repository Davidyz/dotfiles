[include]
    path = "./catppuccin.gitconfig"

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    features = catppuccin-mocha
    side-by-side = true
    dark = true      
    navigate = true
	wrap-max-lines = 0


[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
