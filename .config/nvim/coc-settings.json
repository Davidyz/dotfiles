{
	"languageserver": {
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml", ".git"],
			"filetypes": ["haskell", "hs", "lhaskell"]
		},
		"arduino":{
			"command":"/usr/bin/arduino-language-server",
			"rootPatterns":["*.ino", ".git"],
			"filetypes":["arduino"],
			"args":["-cli", "/usr/bin/arduino-cli", "-clangd", "/usr/bin/clangd", "-cli-config", "/home/davidyz/.arduino15/arduino-cli.yaml"]
		}
	},

	"pairs.enableCharacters": ["(", "[", "{", "<", "'", "\"", "`", "${", "$${"],

	"cSpell.enabledLanguageIds": ["markdown", "pandoc", "text", "txt", "plaintext"],
	"cSpell.language": "en-GB",
	"cSpell.allowCompoundWords": true,

	"rainbow-fart.enabled": false, 

	"java.completion.enabled": true,
	"java.import.maven.enabled": true
}
