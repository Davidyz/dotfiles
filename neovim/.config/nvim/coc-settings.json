{
  "coc.preferences.formatOnSaveFiletypes": ["markdown", "json"],
  "languageserver": {
    "arduino": {
      "command": "arduino-language-server",
      "rootPatterns": ["*.ino", ".git"],
      "filetypes": ["arduino"],
      "args": [
        "-cli",
        "arduino-cli",
        "-clangd",
        "clangd",
        "-cli-config",
        "~/.arduino15/arduino-cli.yaml"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml",
        ".git"
      ],
      "filetypes": ["haskell", "hs", "lhaskell"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    }
  },
  "cSpell.enabledLanguageIds": [
    "markdown",
    "pandoc",
    "text",
    "txt",
    "plaintext"
  ],
  "cSpell.language": "en-GB",
  "cSpell.allowCompoundWords": true,
  "rainbow-fart.enabled": false,
  "java.completion.enabled": true,
  "java.import.maven.enabled": true,
  "coc.preferences.jumpCommand": "tab drop",
  "python.venvPath": "~/.local/share/virtualenvs/",
  "python.pythonPath": "python3",
  "python.formatting.provider": "black",
  "python.analysis.diagnosticMode": "workspace",
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua/",
    "/usr/share/nvim/runtime/lua/vim/",
    "/usr/share/nvim/runtime/lua/lsp/"
  ],
  "Lua.diagnostics.globals": ["vim"],
  "grammarly.filetypes": [
    "asciidoc",
    "tex",
    "plaintex",
    "context",
    "markdown",
    "text",
    "rst",
    "gitcommit"
  ],
  "markdownlint.config": {
    "line_length": true
  },
  "prettier.printWidth": 80,
  "prettier.proseWrap": "always",
  "bibtex.enable": true,
  "texlab.latexindent.modifyLineBreaks": true,
  "list": {
    "source": {
      "bibtex": {
        "files": ["*.bib"]
      }
    }
  },
  "suggest.noselect": true,
  "suggest.floatConfig": { "border": true, "highlight": "Pmenu" },
  "diagnostic.floatConfig": {
    "border": true,
    "close": true,
    "highlight": "Pmenu"
  },
  "signature.floatConfig": {
    "border": true,
    "highlight": "Pmenu"
  },
  "hover.floatConfig": {
    "border": true,
    "highlight": "Pmenu"
  },
  "leetcode.language": "python3",
  "webview.openCommand": "firefox \"%u\"",
  "webview.colorStrategy": "dark"
}
