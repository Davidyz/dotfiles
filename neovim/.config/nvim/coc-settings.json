{
  "coc.preferences.formatOnSaveFiletypes": ["markdown", "json"],
  "languageserver": {
    "haskell": {
      "command": "/usr/bin/haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml",
        ".git"
      ],
      "filetypes": ["haskell", "hs", "lhaskell"]
    },
    "arduino": {
      "command": "/usr/bin/arduino-language-server",
      "rootPatterns": ["*.ino", ".git"],
      "filetypes": ["arduino"],
      "args": [
        "-cli",
        "/usr/bin/arduino-cli",
        "-clangd",
        "/usr/bin/clangd",
        "-cli-config",
        "/home/davidyz/.arduino15/arduino-cli.yaml"
      ]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    }
  },
  "cSpell.enabledLanguageIds": [
    "markdown",
    "pandoc",
    "text",
    "txt",
    "plaintext"
  ],
  "cSpell.language": "en-GB",
  "cSpell.allowCompoundWords": true,
  "rainbow-fart.enabled": false,
  "java.completion.enabled": true,
  "java.import.maven.enabled": true,
  "coc.preferences.jumpCommand": "tab drop",
  "python.venvPath": "~/.local/share/virtualenvs/",
  "python.pythonPath": "/usr/bin/python3",
  "python.formatting.provider": "black",
  "python.analysis.diagnosticMode": "workspace",
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua/",
    "/usr/share/nvim/runtime/lua/vim/",
    "/usr/share/nvim/runtime/lua/lsp/"
  ],
  "Lua.diagnostics.globals": ["vim"],
  "grammarly.filetypes": [
    "asciidoc",
    "tex",
    "plaintex",
    "context",
    "markdown",
    "text",
    "rst",
    "gitcommit"
  ],
  "markdownlint.config": {
    "line_length": true
  },
  "prettier.printWidth": 80,
  "prettier.proseWrap": "always",
  "bibtex.enable": true,
  "list": {
    "source": {
      "bibtex": {
        "files": ["*.bib", "bibs.bib"]
      }
    }
  }
}
